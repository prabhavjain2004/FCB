# ======================================
# TapNex Arena - Environment Variables
# ======================================
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env file to version control!

# ======================================
# DJANGO CONFIGURATION
# ======================================
# Generate a new secret key for production using:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-change-in-production

# Debug mode (MUST be False in production)
DEBUG=True

# Allowed hosts (comma-separated, no spaces)
# Example: localhost,127.0.0.1,.vercel.app,yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1,.vercel.app

# ======================================
# DATABASE CONFIGURATION
# ======================================
# PostgreSQL connection string (Supabase or any PostgreSQL provider)
# Format: postgresql://user:password@host:port/database
# For Supabase: Go to Project Settings > Database > Connection String > Connection Pooling (recommended)
DATABASE_URL=postgresql://postgres:password@localhost:5432/tapnex_arena

# ======================================
# SUPABASE CONFIGURATION
# ======================================
# Get these from: Supabase Project > Settings > API
SUPABASE_URL=https://xxxxxxxxxxxxx.supabase.co
SUPABASE_KEY=your-supabase-anon-key-here

# ======================================
# RAZORPAY PAYMENT GATEWAY
# ======================================
# Get these from: Razorpay Dashboard > Settings > API Keys
# Test Mode Keys (for development)
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your-razorpay-test-secret-here

# Razorpay Webhook Secret (for verifying webhook signatures)
# Create webhook at: Razorpay Dashboard > Webhooks > Add Webhook
# Webhook URL: https://yourdomain.com/booking/payment/webhook/
# Select events: payment.captured, payment.failed
RAZORPAY_WEBHOOK_SECRET=your-webhook-secret-here

# ======================================
# GOOGLE OAUTH CONFIGURATION
# ======================================
# Get these from: Google Cloud Console > APIs & Services > Credentials
# Create OAuth 2.0 Client ID
# Authorized redirect URIs:
#   - http://localhost:8000/accounts/google/login/callback/
#   - https://yourdomain.com/accounts/google/login/callback/
GOOGLE_OAUTH_CLIENT_ID=xxxxxxxxxxxxx.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=GOCSPX-xxxxxxxxxxxxxxxxxxxxx

# ======================================
# TELEGRAM NOTIFICATIONS (Optional)
# ======================================
# Bot Token: Create bot via @BotFather on Telegram
# Chat ID: Use @userinfobot to get your chat ID or group chat ID
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_CHAT_ID=-1001234567890

# ======================================
# EMAIL CONFIGURATION (Optional)
# ======================================
# For development, use console backend (default)
# For production, configure SMTP settings
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# SMTP Configuration (if using email backend)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# ======================================
# ADDITIONAL SETTINGS (Optional)
# ======================================
# Session timeout in seconds (default: 1800 = 30 minutes)
# SESSION_TIMEOUT=1800

# Maximum file upload size in bytes (default: 5MB)
# FILE_UPLOAD_MAX_MEMORY_SIZE=5242880

# Time zone (default: Asia/Kolkata)
# TIME_ZONE=Asia/Kolkata

# Language code (default: en-us)
# LANGUAGE_CODE=en-us

# ======================================
# PRODUCTION-ONLY SETTINGS
# ======================================
# Only set these in production environment

# SSL/HTTPS Settings (set to True in production)
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True

# Security Headers
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True

# ======================================
# NOTES
# ======================================
# 1. Never commit this file with actual secrets to version control
# 2. Always use strong, unique passwords and keys
# 3. Rotate secrets regularly, especially after team changes
# 4. Use different secrets for development, staging, and production
# 5. Keep backup of production secrets in secure location
# 6. For Vercel deployment, set these in: Project Settings > Environment Variables
